<p id="notice"><%= notice %></p>
<link href="https://fonts.googleapis.com/css?family=PT+Serif" rel="stylesheet">
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price/Kg/ltr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        
        <td><%= link_to 'Show', product, class: 'btn btn-outline-dark' %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class: 'btn btn-outline-dark' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-outline-dark' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path,class:'btn btn-primary btn-lg btn-block"' %>
</div>